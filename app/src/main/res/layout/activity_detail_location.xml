<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1A1C1E"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetailLocation">

    <com.example.tenki.view.Navbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@drawable/round_arrow_back"
        app:title="Location"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:text="20"
        android:fontFamily="@font/russoone"
        android:textColor="#F3F3F3"
        android:layout_marginTop="@dimen/large_space"
        android:textSize="48sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Thunderstorm"
        android:layout_marginTop="@dimen/small_space_8"
        android:fontFamily="@font/chakrapetchregular"
        android:textColor="#9D9D9D"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:cardBackgroundColor="#202329"
        app:cardCornerRadius="16dp"
        android:layout_marginRight="@dimen/large_space"
        android:layout_marginLeft="@dimen/large_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="3"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wind" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#F3F3F3"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="10 m/s" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#9D9D9D"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="Wind" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/huminity" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#F3F3F3"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="98%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#9D9D9D"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="Huminity" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rain" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="#F3F3F3"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="100%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#9D9D9D"
                    android:fontFamily="@font/chakrapetchregular"
                    android:text="Rain" />

            </LinearLayout>

            <!-- Replicate the above LinearLayout as needed for additional columns -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Today"
            android:gravity="center"
            android:textColor="#F3F3F3"
            android:fontFamily="@font/chakrapetchregular"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/chakrapetchregular"
            android:gravity="center"
            android:text="13/"
            android:textColor="#9D9D9D"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/chakrapetchregular"
            android:gravity="center"
            android:text="13/"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="#F3F3F3"
            android:fontFamily="@font/chakrapetchregular"
            android:text="22/"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="24dp"
            android:gravity="center"
            android:src="@drawable/storm"
            android:layout_weight="1"
            android:layout_height="24dp"/>



    </LinearLayout>




</LinearLayout>